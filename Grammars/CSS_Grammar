stylesheet: style*

style: selector OPENBRACE rule* CLOSEBRACE

rule: key COLON value SEMICOLON

value: color | size | alignment | fontstyle

size: number PX

number: [0-9]+

selector:  H1 | H2 | P // OK

key: COLOR | FONTSIZE | TEXTALIGN | FONTSTYLE

color: BLACK | RED | GREEN | BLUE | WHITE

alignment: LEFT | CENTER | RIGHT

fontstyle: NORMAL | BOLD | ITALIC

// Lexicon

OPENBRACE: '{'
CLOSEBRACE: '}'
COLON: ':'
SEMICOLON: ';'
H1: 'h1'
H2: 'h2'
P: 'p'
PX: 'px'
COLOR: 'color'
FONTSIZE: 'font-size'
TEXTALIGN: 'text-align'
FONTSTYLE: 'font-style'
BLACK: 'black'
RED: 'red'
GREEN: 'green'
BLUE: 'blue'
WHITE: 'white'
LEFT: 'left'
RIGHT: 'right'
CENTER: 'center'
NORMAL: 'normal'
BOLD: 'bold'
ITALIC: 'italic'
